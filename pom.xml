    <!-- Maven 插件仓库配置：用于下载 Maven 插件 -->
    <pluginRepositories>
        <pluginRepository>
            <!-- 插件仓库唯一标识 -->
            <id>public</id>
            <!-- 插件仓库名称 -->
            <name>aliyun nexus</name>
            <!-- 阿里云 Maven 镜像地址 -->
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <!-- 启用发布版本的插件下载 -->
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <!-- 禁用快照版本的插件下载 -->
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

