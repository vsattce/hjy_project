<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!-- Maven POM 模型版本，固定为 4.0.0 -->
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.4.11</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <!-- 项目坐标信息 -->
    <!-- 组织或公司的唯一标识符，通常使用反向域名 -->
    <groupId>com.hjy</groupId>
    <!-- 项目的唯一标识符 -->
    <artifactId>hjy</artifactId>
    <!-- 项目的版本号 -->
    <version>1.0.0</version>

    <!-- 项目的显示名称 -->
    <name>hjy-project</name>
    <!-- 项目描述 -->
    <description>暂定-个人-系统</description>
    <!--    -->
    <modules>
        <module>app-framework</module>
        <module>app-admin</module>
        <module>app-test</module>
        <module>app-common</module>
        <module>app-generator</module>
        <module>app-system</module>
    </modules>

    <!-- 自定义属性配置 -->
    <properties>
        <!-- 项目版本号，可在其他地方通过 ${hjy.version} 引用 -->
        <hjy.version>1.0.0</hjy.version>
        <java.version>17</java.version>
        <!--        -->
<!--        <velocity.version>2.3</velocity.version>-->

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <!-- 依赖管理：用于统一管理子模块的依赖版本，不会实际引入依赖 -->
    <!-- 子模块可以继承这里声明的依赖版本，无需重复指定版本号 -->
    <dependencyManagement>
        <dependencies>
            <!-- 在此处添加需要统一管理版本的依赖 -->
            <!-- velocity代码生成使用模板 -->
            <dependency>
                <groupId>org.apache.velocity</groupId>
                <artifactId>velocity-engine-core</artifactId>
                <version>2.3</version>
            </dependency>
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-spring-boot3-starter</artifactId>
                <version>3.5.14</version>
            </dependency>
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-jsqlparser</artifactId>
                <version>3.5.14</version>
            </dependency>
            <dependency>
                <groupId>cn.hutool</groupId>
                <artifactId>hutool-bom</artifactId>
                <version>5.8.38</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>3.18.0</version>
            </dependency>
            <!-- 请使用这个依赖来替代 springdoc-openapi-starter-webmvc-ui -->
<!--            重要提示：Knife4j 的依赖已经包含了 springdoc-openapi-starter-webmvc-ui，-->
<!--            所以你不需要再单独引入 SpringDoc 的任何依赖。只需要这一个就够了。-->
            <dependency>
                <groupId>com.github.xiaoymin</groupId>
                <artifactId>knife4j-openapi3-jakarta-spring-boot-starter</artifactId>
                <version>4.4.0</version> <!-- 推荐使用较新版本，此版本兼容 Spring Boot 3 -->
            </dependency>

            <!-- 自定义的内容-->
            <dependency>
                <groupId>com.hjy</groupId>
                <artifactId>app-admin</artifactId>
                <version>${hjy.version}</version>
            </dependency>
            <dependency>
                <groupId>com.hjy</groupId>
                <artifactId>app-system</artifactId>
                <version>${hjy.version}</version>
            </dependency>
            <dependency>
                <groupId>com.hjy</groupId>
                <artifactId>app-framework</artifactId>
                <version>${hjy.version}</version>
            </dependency>
            <dependency>
                <groupId>com.hjy</groupId>
                <artifactId>app-common</artifactId>
                <version>${hjy.version}</version>
            </dependency>
            <dependency>
                <groupId>com.hjy</groupId>
                <artifactId>app-test</artifactId>
                <version>${hjy.version}</version>
            </dependency>
            <dependency>
                <groupId>com.hjy</groupId>
                <artifactId>app-generator</artifactId>
                <version>${hjy.version}</version>
            </dependency>


        </dependencies>
    </dependencyManagement>

    <!-- 打包类型：pom 表示这是一个父项目，用于聚合多个子模块 -->
    <packaging>pom</packaging>

    <!-- Maven 仓库配置：用于下载项目依赖 -->
    <repositories>
        <repository>
            <!-- 仓库唯一标识 -->
            <id>public</id>
            <!-- 仓库名称 -->
            <name>aliyun nexus</name>
            <!-- 阿里云 Maven 镜像地址，国内访问速度快 -->
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <!-- 启用发布版本的依赖下载 -->
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>
